<form method="post" action="{{ path('app_todo_delete', {'id': todo.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('Supprimer' ~ todo.id) }}">
    <button class="btn btn-outline-danger mt-3">Supprimer la Todo</button>
</form>
