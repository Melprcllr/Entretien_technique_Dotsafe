{% extends 'base.html.twig' %}

{% block title %}Todo index{% endblock %}

{% block body %}
    <h1>Accueil</h1>

    <table class="table">
        <thead class="thead-light">
            <tr>
{#                <th>Id</th>#}
                <th>Noms</th>
                <th>Détails</th>
                <th>Complet</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            <tr>
{#                <td>{{ todo.id }}</td>#}
                <td>{{ todo.name }}</td>
                <td>{{ todo.details }}</td>
                <td>{{ todo.completed ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('app_todo_show', {'id': todo.id}) }}">Voir</a>
                    <a class="btn btn-outline-secondary" href="{{ path('app_todo_edit', {'id': todo.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun Todo encore à afficher ...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_todo_new') }}">Créer une nouvelle Todo</a>
{% endblock %}
